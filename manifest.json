{
  "manifest_version": 3,
  "name": "Detect Supabase",
  "version": "1.0",
  "description": "Detects if a website uses Supabase and shows an indicator",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon-default.svg"
  },
  "icons": {
    "128": "icons/icon-default.svg"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}